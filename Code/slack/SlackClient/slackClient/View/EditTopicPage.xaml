<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SlackClient.Views.EditTopicPage"  Title="{Binding ChannelName}">

    <StackLayout >
        <Entry Text="{Binding TextTopic}" FontSize="Large" HorizontalOptions="FillAndExpand" />
        <Button Text="Set topic" Command="{Binding SetTopicCommand}" BackgroundColor="Aqua" HorizontalOptions="End"/>
    </StackLayout>
</ContentPage>